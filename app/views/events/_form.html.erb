<div class='container'> 
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, id: :event_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, id: :event_start_time , class: 'form-control'%>
  </div>
   <div class="form-group">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, id: :event_start_time , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cost %>
    <%= form.text_field :cost, id: :event_cost, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :capacity %>
    <%= form.number_field :capacity, id: :event_capacity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.select :city_id, options_for_select(City.all.collect{|c| [c.name, c.id]}, @event.city_id),
      {:multiple => false, class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :event_type %>
    <%= form.select :event_type, options_for_select(['Event', 'Travel', 'Track'], @event.city_id),
      {:multiple => false, class: "form-control"} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>