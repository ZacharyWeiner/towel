<div class='container'> 
<%= form_with(model: group, local: true) do |form| %>
<% if group.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

  <ul>
    <% group.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class='row'>
  <div class="col-md-6">
  <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :group_name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= image_tag @group.image, style:'width:100%',  class: 'image-rounded'%>
      <%= form.label :image %><br />
      <%= form.file_field :image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, id: :group_description, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <% if  @group.id.nil? %>
      <div> Save the group to add members </div>
    <% else %>
       <%=  render 'shared/controls/user_groups_control', locals: {group: @group} %>
    <% end %>
  </div>
</div> 


<div class="actions">
  <%= form.submit class: 'btn btn-primary' %>
</div>
<% end %>
</div>
